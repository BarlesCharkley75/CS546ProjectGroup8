<header class="hero-image-short">
    <p class="error"> {{error}}</p>
    <div class="hero-text">
        <h1>Hotel Finder</h1>
        <form action="/hotels" method="POST" id="hotelSearchForm">
            <label for="searchTerm">Search by hotel name or location</label>
            <br>
            <input type="text" id="searchTerm" name="searchTerm" value="{{searchTerm}}" style="color: black;">
            <input type="submit" value="Find your hotel!" class="btn btn-primary btn-lg"/>
        </form>
    </div>
</header>
<main>
    {{#if hotels.length}}
        <ul id="hotelsList">
            {{#each hotels}}
            <li class="text-center hotel-item">
                <img class="resize" src="{{images}}", alt="{{name}}">
                <br>
                <a href="/hotels/{{_id}}">{{name}}</a></li>
            {{/each}}
        </ul>
        {{/if}}
</main>      
