<header>
    <p class="error"> {{error}}</p>
    <div class="jumbotron text-center">
        <h1>Hotel Finder</h1>
        <form action="/hotels" method="POST" id="hotelSearchForm">
            <label for="searchTerm">Search by hotel name or location</label>
            <br>
            <input type="text" id="searchTerm" name="searchTerm" value="{{searchTerm}}">
            <input type="submit" value="Find your hotel!" />
        </form>
    </div>
</header>


            {{#if hotels.length}}
            <ul id="hotelsList">
                {{#each hotels}}
                <li><a href="/hotels/{{_id}}">{{name}}</a></li>
                {{/each}}
            </ul>
            {{/if}}

