<article class="post">
  <br>
  <button id="addHotel">Add this hotel to my Plan</button>
  <div><h1 id="hotelName">{{name}}</h1></div>

  <img class = "resize" src="{{images}}", alt="{{name}}">
  

  <h2>PhoneNumber</h2>
  <h4>{{phoneNumber}}</h4>


  <h2>Website</h2>
  <a href="{{website}}">{{website}}</a>


  <h2>Address</h2>
  <h4>{{address}}</h4>

  
  <h2>City</h2>
  <h4>{{city}}</h4>

  <h2>State</h2>
  <h4>{{state}}</h4>

  <h2>Zip</h2>
  <h4>{{zip}}</h4>

  
  <h2>OverallRating</h2>
  <h4>{{overallRating}}</h4>

  {{#if amenities.length}}
    <h2>Amenities</h2>
    <ul>
      {{#each amenities}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if nearbyAttractions.length}}
    <h2>NearbyAttractions</h2>
    <ul>
      {{#each nearbyAttractions}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if reviews.length}}
    <h2>Reviews</h2>
    <ul>
      {{#each reviews}}
        <div class="jumbotron text-center">
        <li><h3>Title:{{this.title}}</h3></li>
        <li><h3>Content:</h3></li>
        <li><h4>{{this.review}}</h4></li>
        <li><h3>Rating:</h3></li>
        <li><h4>{{this.rating}}</h4></li>
        <li><h3>Reviewer:{{this.reviewer}}</h3></li>
        </div>
      {{/each}}
    </ul>
  {{/if}}

  {{#if comments.length}}
    <h2>Comments</h2>
    <ul>
      {{#each comments}}
        <li>{{this}}</li>
      {{/each}}
    </ul>
  {{/if}}
  

  <p class="error"> {{error}}</p>
    <div class="jumbotron text-center">
        <h1>Review This Hotel</h1>
        <form action="/hotels/{{id}}" method="POST" id="reviewForm">
            <label for="reviewText">Title</label>
        
            <input type="text" id="reviewTitle" name="reviewTitle" value="{{reviewTitle}}">
             <label for="reviewText">Content</label>
    
            <input type="text" id="reviewContent" name="reviewContent" value="{{reviewContent}}">
             <label for="reviewText">Rating(0-5)</label>
        
            <input type="text" id="rating" name="rating" value="{{rating}}">
            <input type="submit" value="Add Review" />
        </form>
    </div>

  <a href="/hotels">Back to search</a>
</article>
<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
        crossorigin="anonymous"></script>
<script src="../../public/js/individualScript.js"></script>
