<header>
        <div class="jumbotron text-center">
            <h1>Hotel Finder</h1>
            <form action="/hotels" method="POST" id="hotelSearchForm">
                <label for="searchTerm">Search by hotel name or location</label>
                <br>
                <input type="text" id="searchTerm" name="searchTerm">
                <input type="submit" value="Find your hotel!" />
            </form>
        </div>
    </header>
    <section>
        <h2 align="center">What is Hotel Finder?</h2>
        <p>It's your one stop shop for finding your next hotel!</p>
    </section>
    <div>
            <h1>Hotel List</h1>
            {{#if hotels.length}}
            <ul id="hotelsList">
                {{#each hotels}}
                <li><a href="/hotels/{{_id}}">{{name}}</a></li>
                {{/each}}
            </ul>
            {{/if}}
        </div>
